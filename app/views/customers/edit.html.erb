    <h5>メールアドレス</h5>
      <%= f.text_field :email, class: "form-group" %>
      <%= f.submit "保存" %>
      <% end %>
      <%= link_to "退会する", customer_path(@customer), method: :delete %>
</div>
 </div>
  </div>