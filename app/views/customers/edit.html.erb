<div class="container">
 <div class="row">
  <div class="col-md-8 offset-md-2 mt-5">
   <h3 class="mb-2">
   <%= link_to schedules_path do %>
     <i class="fa-solid fa-less-than"></i>
   <% end %>
   </h3>
   <h2>会員情報編集</h2><br>

    <%= form_with model: @customer do |f| %>
    <h5>氏名</h5>
